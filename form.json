<?php 
    
    if ($_SERVER['REQUEST_METHOD'] == 'POST') { 
          
        function get_data() { 
            $datae = array(); 
            $datae[] = array( 
                'Name' => $_POST['name'], 
                'FatherName' => $_POST['fathername'], 
                'MotherName' => $_POST['mothername'],
                'Age' => $_POST['Age'],
            ); 
            return json_encode($datae); 
        } 
          
        $name = "gfg"; 
        $file_name = $name . '.json'; 
       
        if(file_put_contents( 
            "$file_name", get_data())) { 
                echo $file_name .' file created'; 
            } 
        else { 
            echo 'There is some error'; 
        } 
    } 
?> 